<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto flex flex-wrap items-center justify-center">
    <div class="lg:w-1/3 md:w-1/2 sm:w-3/4 bg-white shadow-md rounded-lg px-12 py-12 flex flex-col w-full mt-10 md:mt-0">
      <h2 class="text-gray-900 text-4xl font-medium title-font mb-15 text-center">新規登録</h2>
      <%= form_with model: @user do |f| %>
        <div class="relative mb-8 flex justify-center">
          <div class="w-full lg:w-3/4">
            <%= f.label :name, '名前', class: 'leading-7 text-sm text-gray-600 mt-4' %>
            <%= f.text_field :name, class: 'w-full bg-gray-100 rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-2 px-4 leading-8 transition-colors duration-200 ease-in-out' %>
          </div>
        </div>
        <div class="relative mb-8 flex justify-center">
          <div class="w-full lg:w-3/4">
            <%= f.label :email, 'メールアドレス', class: 'leading-7 text-sm text-gray-600' %>
            <%= f.email_field :email, class: 'w-full bg-gray-100 rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-2 px-4 leading-8 transition-colors duration-200 ease-in-out' %>
          </div>
        </div>
        <div class="relative mb-8 flex justify-center">
          <div class="w-full lg:w-3/4">
            <%= f.label :password, 'パスワード', class: 'leading-7 text-sm text-gray-600' %>
            <%= f.password_field :password, class: 'w-full bg-gray-100 rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-2 px-4 leading-8 transition-colors duration-200 ease-in-out' %>
          </div>
        </div>
        <div class="relative mb-8 flex justify-center">
          <div class="w-full lg:w-3/4">
            <%= f.label :password_confirmation, 'パスワード確認', class: 'leading-7 text-sm text-gray-600' %>
            <%= f.password_field :password_confirmation, class: 'w-full bg-gray-100 rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-2 px-4 leading-8 transition-colors duration-200 ease-in-out' %>
          </div>
        </div>
        <div class="actions flex justify-center mb-8">
          <%= f.submit '登録', class: 'text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg' %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to 'ログインページへ', login_path, class: 'text-gray-700 decoration-2 underline-offset-4 transition-colors hover:underline' %>
      </div>
    </div>
  </div>
</section>

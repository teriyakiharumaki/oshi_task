<% breadcrumb :third_task, @third_task %>
<div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
  <div class="bg-white shadow-md p-6 rounded-lg max-w-2xl w-full">
    <div class="flex justify-between items-center mb-6 border-b border-black pb-2">
      <h1 class="text-4xl font-bold">サードタスク詳細</h1>
      <div class="flex space-x-4 items-center text-lg justify-end">
        <div class="flex space-x-4 items-center text-lg">
          <%= button_to "編集", edit_task_subtask_third_task_path(@subtask.task, @subtask, @third_task), method: :get, class: 'text-indigo-500 decoration-2 underline-offset-4 transition-colors hover:underline' %>
          <%= button_to "削除", task_subtask_third_task_path(@subtask.task, @subtask, @third_task), method: :delete, data: { turbo_confirm: "削除しますか?" }, class: 'text-red-400 decoration-2 underline-offset-4 transition-colors hover:underline' %>
          <% if @third_task.done %>
            <%= button_to "未完了", done_task_subtask_third_task_path(@subtask.task, @subtask, @third_task), method: :post, class: 'text-white bg-gray-500 border-0 py-2 px-6 focus:outline-none hover:bg-gray-600 rounded text-lg ml-4' %>
          <% else %>
            <%= button_to "完了", done_task_subtask_third_task_path(@subtask.task, @subtask, @third_task), method: :post, class: 'text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded text-lg ml-4' %>
          <% end %>
        </div>
      </div>
    </div>
    <p class="text-gray-700 text-4xl mb-4"><%= @third_task.title %></p>
    <p class="text-gray-700 text-2xl mb-2">メモ：</p>
    <div class="border border-gray-300 pb-2 mb-6">
      <p class="text-gray-700 text-2xl mb-6"><%= @third_task.body %></p>
    </div>
    <div class="text-gray-700 text-center pr-4">
      <%= link_to "サブタスク詳細に戻る", task_subtask_path(@subtask.task, @subtask), class: 'text-gray-700 decoration-2 underline-offset-4 transition-colors hover:underline' %>
    </div>
  </div>
</div>

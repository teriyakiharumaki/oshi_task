<%= form_with(model: [@task, @subtask], local: true) do |form| %>
  <div class="relative mb-8 flex justify-center">
    <div class="w-full lg:w-3/4">
      <%= form.label :title, 'タイトル', class: 'leading-7 text-sm text-gray-600 mt-4' %>
      <%= form.text_field :title, class: 'w-full bg-gray-100 rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-2 px-4 leading-8 transition-colors duration-200 ease-in-out' %>
    </div>
  </div>
  <div class="relative mb-8 flex justify-center">
    <div class="w-full lg:w-3/4">
      <%= form.label :body, 'メモ', class: 'leading-7 text-sm text-gray-600 mt-4' %>
      <%= form.text_area :body, class: 'w-full bg-gray-100 rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-2 px-4 leading-8 transition-colors duration-200 ease-in-out' %>
    </div>
  </div>
  <div class="actions flex justify-center mb-6">
    <% if @subtask.new_record? %>
      <%= form.submit 'サブタスク作成', class: 'text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg' %>
    <% else %>
      <%= form.submit 'サブタスク更新', class: 'text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg' %>
    <% end %>
  </div>
<% end %>
